<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".therapist_chat"
        android:orientation="vertical"
        android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_chat">

        <ImageView
            android:layout_width="148dp"
            android:layout_height="137dp"
            android:src="@drawable/tolife1"/>

        <TextView
            android:id="@+id/txt_to_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Curated list of inclusive mental health councellors."
            android:layout_marginTop="50dp"
            android:fontFamily="@font/capriola"
            android:gravity="center"
            android:textAppearance="@style/chat_with_y"
            >
        </TextView>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/therapist_chat_r_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_chat"
        android:layout_marginTop="10dp">


    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>
